<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_xmmc"
            style="@style/black_normal_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xzqh"
            style="@style/gray_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xmlxmc"
            style="@style/gray_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xcsj"
            style="@style/gray_normal_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_zlxc_item_update"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_zlxc_item_resp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="18dp"
            android:visibility="invisible" />

    </LinearLayout>
</android.support.v7.widget.CardView>